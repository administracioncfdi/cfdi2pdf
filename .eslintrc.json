{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["airbnb-base", "prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "plugins": ["prettier"],
  "rules": {
    "max-len": ["error", {
      "code": 140,
      "ignoreRegExpLiterals": true,
      "ignoreTemplateLiterals": true
    }],
    "prettier/prettier": "error"
  }
}
